<div class="container panel panel-default">
    <h1>CNN Health Articles</h1>
    {{#each articles }}
    <div class="articleList">
        <h3 class="panel-heading"><a href="{{link}}">{{headline}}</a></h3>
        <div>
            <div class="panel">
                <h5 class="commentHeader">Comments</h5>
                {{#each comments}}
                <div class="commentList">
                    {{this.text}}
                    <div data-comment-id="{{this._id}}" class="btn btn-sm btn-danger">Delete</div>
                </div>
                {{/each}}
            </div>

            <form action="/comment" method="POST" class="formClass">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Make a comment!" name="comment">
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" name="{{_id}}">
                </div>
                <div class="form-group">
                    <input type="hidden" value="Save" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
    {{/each}}
</div>